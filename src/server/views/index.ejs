    <![endif]-->

    <% if (env == "production" && hash) { %>
      <script type="text/javascript" src="/assets/javascripts/<%= hash %>.boot.js">
      </script>
    <% } else { %>
      <script type="text/javascript" src="/assets/javascripts/boot.js">
      </script>
    <% } %>
  </body>
</html>
